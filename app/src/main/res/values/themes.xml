<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubers" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_40</item>
        <item name="colorPrimaryVariant">@color/blue_40</item>
        <item name="colorOnPrimary">@color/blue_90</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_40</item>
        <item name="colorSecondaryVariant">@color/green_40</item>
        <item name="colorOnSecondary">@color/green_90</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="text">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="text.light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text.bold.light">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>